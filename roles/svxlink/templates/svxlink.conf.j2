###########################################################################
#                                                                         #
#            Configuration file for the SvxLink server                    #
#                                                                         #
###########################################################################

[GLOBAL]
MODULE_PATH={{ svxlink_module_path }}
LOGICS=SimplexLogic
CFG_DIR=svxlink.d
TIMESTAMP_FORMAT="%c"
CARD_SAMPLE_RATE=48000
LOCATION_INFO=LocationInfo

[SimplexLogic]
TYPE=Simplex
RX=Rx1
TX=Tx1
MODULES=ModuleEchoLink
CALLSIGN={{ node.callsign }}-R
SHORT_IDENT_INTERVAL=10
IDENT_ONLY_AFTER_TX=4
EVENT_HANDLER=/usr/share/svxlink/events.tcl
DEFAULT_LANG=en_US
REPORT_CTCSS=100.0
MACROS=Macros
FX_GAIN_NORMAL=0
FX_GAIN_LOW=-12

[Macros]
1=EchoLink:9999#
9=Parrot:0123456789#
03400=EchoLink:9999#

[Rx1]
TYPE=Local
AUDIO_DEV=alsa:plughw:1
AUDIO_CHANNEL=0
#SQL_DET=CTCSS
#CTCSS_MODE=2
#CTCSS_FQ=100.0
SQL_DET=VOX
SQL_START_DELAY=0
SQL_DELAY=0
SQL_HANGTIME=700
SQL_EXTENDED_HANGTIME=2000
SQL_EXTENDED_HANGTIME_THRESH=10
VOX_FILTER_DEPTH=120
VOX_THRESH=75
SERIAL_PORT=/dev/null
SERIAL_PIN=CTS
SIGLEV_SLOPE=1
SIGLEV_OFFSET=0
SIGLEV_OPEN_THRESH=30
SIGLEV_CLOSE_THRESH=10
DEEMPHASIS=0
PREAMP=0
DTMF_DEC_TYPE=INTERNAL
DTMF_MUTING=1
DTMF_HANGTIME=40

[Tx1]
TYPE=Local
AUDIO_DEV=alsa:plughw:1
AUDIO_CHANNEL=0
PTT_TYPE=NONE
TX_DELAY=300
PTT_HANGTIME=1500
TIMEOUT=300
PREEMPHASIS=0
DTMF_TONE_LENGTH=100
DTMF_TONE_SPACING=50
DTMF_DIGIT_PWR=-18

[LocationInfo]
APRS_SERVER_LIST=euro.aprs2.net:14580
STATUS_SERVER_LIST=aprs.echolink.org:5199
LON_POSITION={{ node.lon }}
LAT_POSITION={{ node.lat }}
CALLSIGN=ER-{{ node.callsign }}
FREQUENCY=145.230
TX_POWER=5
ANTENNA_GAIN=0
ANTENNA_HEIGHT=12m
ANTENNA_DIR=-1
PATH=WIDE1-1
BEACON_INTERVAL=10
TONE=100
COMMENT="N6NFI Repeater - 9AM Talk Net"
